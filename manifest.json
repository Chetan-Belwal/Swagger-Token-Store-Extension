{
  "manifest_version": 3,
  "name": "Swagger Token Store",
  "version": "1.0.0",
  "description": "A productivity Chrome extension that manages and injects Authorization Bearer tokens into Swagger UI or any API tool with a single clickâ€”simplifying authentication workflows.",
  "author": "Chetan Belwal",

  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },

  "action": {
    "default_icon": {
      "16": "storage/icons/icon16.png",
      "32": "storage/icons/icon32.png",
      "48": "storage/icons/icon48.png",
      "128": "storage/icons/icon128.png"
    },
    "default_popup": "index.html",
    "default_title": "Swagger Token Store Extension"
  },

  "icons": {
    "16": "storage/icons/icon16.png",
    "32": "storage/icons/icon32.png",
    "48": "storage/icons/icon48.png",
    "128": "storage/icons/icon128.png"
  },

  "permissions": ["scripting", "activeTab", "storage", "tabs"],

  "host_permissions": ["http://*/*", "https://*/*", "localhost:*"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./auto-load-token.js"]
    }
  ]
}
